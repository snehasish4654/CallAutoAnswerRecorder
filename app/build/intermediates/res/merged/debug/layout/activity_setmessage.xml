<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hdf"
    android:id="@+id/mainpage3"
    tools:context="com.findmyworld2k15gmail.callautoanswerrecorder.SETMESSAGE">





    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setmsg"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26"
        android:text="hello!!if i am not able to answer any call,your call will be received automatically.So plz leave your voice message,it will be recorded "
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Each caller will get one message per day on his first call"
        android:id="@+id/checkBox"
        android:layout_weight="0.10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/setmsg"
        android:checked="true"
        android:clickable="true"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send msg to each caller on there each call"
        android:id="@+id/checkBox2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/checkBox"
        android:layout_weight="0.10"
        android:checked="false"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/buttion"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/checkBox2"
        android:textSize="20sp"
        android:text="save message"
        android:id="@+id/savemsg"
        android:layout_gravity="center_horizontal" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
